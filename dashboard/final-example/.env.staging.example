# Staging Environment Variables
# Copy this file to .env.staging and fill in your values

# ============================================================================
# Database Configuration (Neon PostgreSQL)
# ============================================================================
# Get these from: https://console.neon.tech

POSTGRES_URL="postgresql://neondb_owner:YOUR_PASSWORD@ep-xxx-pooler.ap-southeast-2.aws.neon.tech/neondb?sslmode=require"
POSTGRES_PRISMA_URL="postgresql://neondb_owner:YOUR_PASSWORD@ep-xxx-pooler.ap-southeast-2.aws.neon.tech/neondb?sslmode=require"
POSTGRES_URL_NON_POOLING="postgresql://neondb_owner:YOUR_PASSWORD@ep-xxx.ap-southeast-2.aws.neon.tech/neondb?sslmode=require&connection_limit=1"
POSTGRES_USER="neondb_owner"
POSTGRES_HOST="ep-xxx-pooler.ap-southeast-2.aws.neon.tech"
POSTGRES_PASSWORD="YOUR_PASSWORD"
POSTGRES_DATABASE="neondb"

# ============================================================================
# NextAuth Configuration
# ============================================================================
# Generate AUTH_SECRET: openssl rand -base64 32

AUTH_SECRET="YOUR_AUTH_SECRET_HERE"

# Update this after first deployment with actual CloudFront URL
# Example: https://d1234567890abc.cloudfront.net/api/auth
AUTH_URL="http://localhost:3001/api/auth"  # Update after deployment

