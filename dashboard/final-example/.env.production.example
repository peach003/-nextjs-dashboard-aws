# Production Environment Variables
# Copy this file to .env.production and fill in your values

# ============================================================================
# Database Configuration (Neon PostgreSQL or AWS RDS)
# ============================================================================
# Option 1: Keep using Neon (easiest)
# Option 2: Migrate to AWS RDS Aurora (more expensive but AWS-native)

POSTGRES_URL="postgresql://user:password@host/database?sslmode=require"
POSTGRES_PRISMA_URL="postgresql://user:password@host/database?sslmode=require"
POSTGRES_URL_NON_POOLING="postgresql://user:password@host/database?sslmode=require&connection_limit=1"
POSTGRES_USER="user"
POSTGRES_HOST="host"
POSTGRES_PASSWORD="password"
POSTGRES_DATABASE="database"

# ============================================================================
# NextAuth Configuration
# ============================================================================
# Use SAME AUTH_SECRET as staging for consistency

AUTH_SECRET="YOUR_AUTH_SECRET_HERE"

# Update this after first production deployment
# Example: https://dashboard.yourdomain.com/api/auth (if using custom domain)
# Or: https://dXXXXXXXXXX.cloudfront.net/api/auth
AUTH_URL="http://localhost:3001/api/auth"  # Update after deployment

